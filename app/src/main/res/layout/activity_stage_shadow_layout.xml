<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6F7F9"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="center">

        <me.erwa.sourceset.view.layout.ShadowLayout
            android:layout_width="200dp"
            android:layout_height="104dp"
            app:sl_borderColor="#CCEDEFF3"
            app:sl_borderWidth="1dp"
            app:sl_cornerRadius="4dp"
            app:sl_dy="4dp"
            app:sl_shadowColor="#143A4E73"
            app:sl_shadowRadius="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="ShadowLayout"
                android:textSize="20sp"
                android:textStyle="bold" />
        </me.erwa.sourceset.view.layout.ShadowLayout>

        <TextView
            android:layout_width="100dp"
            android:layout_height="92dp"
            android:layout_marginLeft="20dp"
            android:background="#ccc"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="center">

        <me.erwa.sourceset.view.layout.ShadowLayout
            android:layout_width="200dp"
            android:layout_height="96dp"
            app:sl_cornerRadius="10dp"
            app:sl_dy="0dp"
            app:sl_shadowColor="#ff252c"
            app:sl_shadowRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF1EB4FF"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="ShadowLayout"
                android:textSize="20sp"
                android:textStyle="bold" />
        </me.erwa.sourceset.view.layout.ShadowLayout>
        <TextView
            android:layout_width="100dp"
            android:layout_height="76dp"
            android:layout_marginLeft="20dp"
            android:background="#ccc"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFF6F7F9">

        <me.erwa.sourceset.view.layout.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="bottom"
            app:sl_borderWidth="0dp"
            app:sl_cornerRadius="0dp"
            app:sl_dy="-4dp"
            app:sl_shadowColor="#143A4E73"
            app:sl_shadowRadius="12dp"
            app:sl_shadowSides="TOP">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="ShadowLayout"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFD72D"
                    android:gravity="center"
                    android:text="开始扫雷"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </me.erwa.sourceset.view.layout.ShadowLayout>
    </LinearLayout>

</LinearLayout>